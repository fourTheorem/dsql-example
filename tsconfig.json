{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "lib": [
      "es2022"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "**/cdk.out"
  ]
}
